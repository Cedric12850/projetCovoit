{% extends 'base.html.twig' %}

{% block title %}covoit{% endblock %}

{% block body %}
<main class="heightClass">

    <div class="homeClass">

        <h1 class="searchTilteHomeClass"> Partager autrement, Voyager infiniment!</h1>

        <section id = "homeChifMess" class="d-flex justify-content-between align-items-center">
            <div id= "homeChiffres" >
                <div class="row" >
                    <span class="cercle textCercle">  {{nbActiveUsers}} </span>
                    <span class ="textCercle"> Utilisateurs </span>
                </div>
                <div class="row" >
                    <span class="cercle textCercle">  {{nbDispoTrips}} </span>
                    <span class ="textCercle"> Trajets </span>
                </div>
                <div class="row" >
                    <span class="cercle textCercle">  {{nbResaAvant}} </span>
                    <span class ="textCercle"> Réservation  </span>
                </div>
            </div>
        
            <div class= "homeMessage d-none d-lg-block" >
                <p > Ensemble depuis plus de <b> {{nbAnnees}} </b> ans </p>
            </div>
        </section>

        <section id="homeRechResa">
            <h2 class="texteCenter availableTripHomeClass">  {{nbTripCours}} trajets disponibles</h2>
            <h4>  Recherchez le votre :</h4>
