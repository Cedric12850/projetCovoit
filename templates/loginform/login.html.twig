{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}

<main class="loginFormMainClass heightClass">

    <div class="loginFormWrapClass">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="loginFormMessageClass">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="logoutLinkClass">Se déconnecter</a>
                </div>
            {% endif %}

            <h1 class="loginFormTitleClass">Se connecter</h1>
            <div class="loginFormClass">
                <label for="username">Courriel : </label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="loginEmailClass" autocomplete="email" required autofocus>
                <label for="password">Mot de passe : </label>
                <input type="password" name="_password" id="password" class="loginPasswordClass" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}">

                
                    <div class="loginFormRemeberMeClass">
                        <input type="checkbox" name="_remember_me" id="_remember_me">
                        <label for="_remember_me">Se souvenir de moi</label>
                    </div>
            

                <button class="buttonClass" type="submit">
                    Connexion
                </button>
            </div>
        </form>
    </div>

</main>

{% endblock %}
