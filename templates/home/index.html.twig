                <input type="number" name="Départ" id="villeDep" placeHolder ="Num ville de départ" >
                <input type="number" name="Arrivée" id="villeArr"  placeHolder ="Num ville d'arrivée" >
                <button type ="submit"> Rechercher</button>
            </form> #}

            {{ form_start(form,
            {
                'attr':{
                    'id': 'searchForm',
                    'class': 'searchHomeForm'
                },
                'method': 'post'  
            }
            ) }}
{#                 <input type="number" name="depart" id="villeDep" placeholder="Num ville de départ" required>
                <input type="number" name="arrivee" id="villeArr" placeholder="Num ville d'arrivée" required> #}

                <span class="tripSearchFormItemClass tripSearchTownFormItemClass">
                    {{ form_row(form.town_start, {
                        'attr': {
                            'class': 'town_autocomplete',
                        }
                    }) }}
                    {{ form_row(form.town_start_id) }}<!-- Champ caché pour l'ID de la ville de départ -->
                </span>

                <span class="tripSearchFormItemClass tripSearchTownFormItemClass">
                    {{ form_row(form.town_end, {
                        'attr': {
                            'class': 'town_autocomplete',
                        }
                    }) }}
                    {{ form_row(form.town_end_id) }}<!-- Champ caché pour l'ID de la ville d'arrivée -->
                </span>

                <button type="submit" class="buttonClass tripSearchFormbuttonClass tripHomeSearchFormbuttonClass">Rechercher</button>

