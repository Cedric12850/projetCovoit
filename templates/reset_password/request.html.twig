{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<main class="resetPSWFormMainClass heightClass">
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="resetPSWFormWrapClass">
        <h1>Réinitialiser votre mot de passe</h1>
        <div class="resetPSWFormClass"> 
            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div>
                    <small>
                        Entrez votre adresse mail pour recevoir un lien de réinitialisation du mot de passe.
                    </small>
                </div>

                <button class="buttonClass profilButtonClass">Envoyer le lien par mail</button>
            {{ form_end(requestForm) }}
        </div>  
    </div>
</main>
{% endblock %}
