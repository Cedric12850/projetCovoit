            <div class="tripSearchResultItemNbPasClass"><h4>Nombre de passagers :</h4><p>&nbsp; {{ nb_passenger }}</p></div>
           {%  dump(resultat) %}
            {# <div><a href="{{ path('app_tripresult_show', { 'id': resultat.id }) }}">Voir le trajet</a></div> #}
        </div>

                
            {% endfor %}

        </div>
    </div> 

</main>

{% endblock %}
