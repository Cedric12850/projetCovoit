{% extends 'base.html.twig' %}

{% block title %}Votre recherche{% endblock %}

{% block body %}

<main class="heightClass">

    <div class="tripSearchResultPageClass">
        <h1 class="tripSearchResultTitlePageClass">Votre recherche</h1>
        <div class="tripSearchResultWrapClass"> 
            <h2 class="tripSearchResultTitleWrapClass">Résultats de la recherche</h2>
            <div class="tripSearchResultPathClass"><p>Trajet de&nbsp;</p><h4>{{ town_start }}</h4><p>&nbsp;à&nbsp; </p> <h4> {{ town_end }}</h4></div>

            {% for resultat in resultats %}
